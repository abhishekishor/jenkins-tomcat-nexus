pipeline {
    
    agent any
    
    tools {
        
        maven 'Maven-Tool'
        
    }
    
    stages {
        
        stage ("Git Checkout") {
            
            steps {
                
                git branch: 'main', credentialsId: 'Github_Token',
                url: 'https://github.com/abhishekishor/tomcat-maven-jenkins.git'
                
            }
            
        }
        
        stage ("Maven Build") {
            
            steps {
                
                sh "mvn clean package"
                
            }
        }
        
        stage ("Upload War File") {
            
            steps {
                
                sshagent(['tomcat-server']) {
                        
                        sh "scp -o StrictHostKeyChecking=no $WORKSPACE/target/maven-web-application.war ubuntu@54.255.237.208:/opt/tomcat/webapps"
                        
                }
                
            }
            
        }
        
    }
}