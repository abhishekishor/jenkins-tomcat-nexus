pipeline {
    
    agent any
    
    tools {
        
        maven 'Maven-Tool'
        
    }
    
    stages {
        
        stage ("Git Checkout") {
            
            steps {
                
                git branch: 'main', credentialsId: 'Github_Token',
                url: 'https://github.com/abhishekishor/tomcat-maven-jenkins.git'
                
            }
            
        }
        
        stage ("Maven Build") {
            
            steps {
                
                sh "mvn clean package"
                
            }
        }
        
    }
}